# Solana RPC Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WSS_URL=wss://api.mainnet-beta.solana.com
COMMITMENT_LEVEL=confirmed

# Wallet Configuration
PRIVATE_KEY=your_base58_private_key_here
WALLET_PUBLIC_KEY=your_wallet_public_key_here

# Bot Configuration
MAX_BUY_AMOUNT_SOL=0.1
MIN_LIQUIDITY_SOL=5.0
MAX_SLIPPAGE_PERCENT=10
PRIORITY_FEE_LAMPORTS=100000
SNIPE_DELAY_MS=1000

# Security Filters
MAX_BUY_TAX_PERCENT=5
MAX_SELL_TAX_PERCENT=10
MIN_HOLDER_COUNT=10
MAX_TOP_HOLDER_PERCENT=30
REQUIRE_LIQUIDITY_LOCK=true
LIQUIDITY_LOCK_MIN_DAYS=30

# Profit Taking
TAKE_PROFIT_PERCENT=100
STOP_LOSS_PERCENT=50
AUTO_SELL_ENABLED=true

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
ENABLE_TELEGRAM=false

# Web Interface
WEB_PORT=3000
ENABLE_WEB_UI=true

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIRECTORY=./logs

# Advanced Settings
MAX_CONCURRENT_SNIPES=5
RPC_TIMEOUT_MS=30000
RETRY_ATTEMPTS=3
BLACKLISTED_CREATORS=comma,separated,pubkeys
WHITELISTED_CREATORS=comma,separated,pubkeys